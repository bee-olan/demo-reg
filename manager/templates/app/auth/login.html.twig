{% extends 'auth.html.twig' %}

{% block title %}Авторизация{% endblock %}


    {% block zagol %}
        <div class="zagol zagol-bg-primary">
                <h1 class="zagol-teni"> Рег - Те - Ма</h1>
        </div>
    {% endblock %}
{% block body %}
    <div class="zagol-container">

        <div class="row justify-content-center">
            {#            <div class="col-md-8">#}
            <div class="zagol-col-md-8">
                <div class="card-group">
                    <div class="card p-4">
                        <div class="card-body">
                            {% include '_flashes.html.twig' %}

                            <h1 class="zagol-teni zagol-teni--em4 ma-bo-2">Авторизация</h1>
                            <div class="ma-bo-2 ">
                            <span class="zagol-teni zagol-teni--px30" > Войди в учетную запись  </span>
                           </div>
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <form method="post">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="icon-envelope"></i></span>
                                    </div>

                                    <input class="form-control" type="email" name="email" value="{{ last_username }}"
                                           placeholder="Email"/>
                                </div>
                                <div class="input-group ma-bo-2">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="icon-lock"></i></span>
                                    </div>
                                    <input class="form-control" type="password" name="password" placeholder="Password"/>
                                </div>
                                <div class="card-body text-center ">
                                    <button class="btnn btnn-log " type="submit">
                                        Войди в учетную запись
                                    </button>
                                </div>
                                <hr/>
                                <div class="row">
                                    <div class="form-group">
                                        <div class="checkbox mb-3">
                                            <label>
                                                <input type="checkbox" name="_remember_me">
                                                <span >Запомни меня</span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-6 text-right ma-to-4">
                                        <a class="btnn btnn-log" href="{{ path('auth.reset') }}">
                                            Забыли пароль?
                                        </a>
                                    </div>
                                </div>
                            </form>
                            <hr/>
{#                            <div class="row">#}
{#                                <div class="col-12">#}
{#                                    <a class="btn btn-block btn-facebook" href="{{ path('oauth.facebook') }}">#}
{#                                        <span>facebook</span>#}
{#                                    </a>#}
{#                                </div>#}
{#                            </div>#}
                        </div>
                    </div>
                    <div class="card text-white zagol-bg-primary py-5 d-md-down-none" style="width:44%">
                        <div class="card-body text-center">
                            <div>

                                <h2 class="zagol-teni zagol-teni--em4" >Регистрация</h2>
                                <p class="  ma-bo-1">
                                   <span class="zagol-teni zagol-teni--px30" > Сайт для пчеловодов и матководов.  </span>
                                </p>
                            </div>
                            <div>

                                <p class=" pa-le-2 ">
                                    <span class="zagol-teni zagol-teni--em4" >Рег  </span>
                                    <span class="zagol-teni zagol-teni--px30" > - региональный  </span>
                                </p>
                                <p >
                                    <span class="zagol-teni zagol-teni--em4">Те  </span>
                                    <span class="zagol-teni zagol-teni--px30" > - тест  </span>
                                </p>
                                <p class=" pa-le-8 ">
                                    <span class="zagol-teni zagol-teni--em4">Ма  </span>
                                     <span class="zagol-teni zagol-teni--px30" > - маток.  </span>
                                </p>

                            </div>
                            <div>
                                <a class="btnn btnn-reg ma-to-1" href="{{ path('auth.signup') }}">
                                    Зарегистрироваться Сейчас!
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}